<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/departureForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardBackgroundColor="?attr/cardBackgroundColor"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true"
        tools:showIn="@layout/fragment_nearbystations">

        <io.github.runassudo.ptoffline.ui.LocationGpsView
            android:id="@+id/location_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:hint="@string/location"
            app:homeLocation="true"
            app:favLocation="true"
            app:mapLocation="true"
            app:onlyIds="false"/>

    </android.support.v7.widget.CardView>

</LinearLayout>